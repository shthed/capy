    "default": true,
    "heading": {
      "title": "Basics",
      "helpLabel": "Everyday controls",
      "helpText": "Stay in a single view for quick play: preview, playstyle, hints, and sizing live here."
    },
    "sections": [
      {
        "id": "quickStart",
        "title": "Quick start",
        "layout": "actions",
        "items": [
          {
            "type": "action",
            "id": "previewToggle",
            "label": "Show preview",
            "icon": "\ud83d\uddbc",
            "ariaLabel": "Show preview",
            "testId": "preview-toggle",
            "ariaPressed": false,
            "disabled": true
          },
          {
            "type": "action",
            "id": "fullscreenButton",
            "label": "Enter fullscreen",
            "icon": "\u26f6",
            "ariaLabel": "Enter fullscreen",
            "testId": "fullscreen-button",
            "ariaPressed": false
          }
        ],
        "note": "Open a preview or go fullscreen without leaving the puzzle."
      },
      {
        "id": "playStyle",
        "title": "Play style",
        "items": [
          {
            "type": "toggle",
            "id": "autoAdvanceToggle",
            "label": "Jump to the next colour when finished",
            "checked": true
          },
          {
            "type": "select",
            "id": "difficultySelect",
            "label": "Tap forgiveness",
            "options": [
              {
                "value": "normal",
                "label": "Precise (standard)",
