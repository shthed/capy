{
  "name": "capycolour",
  "version": "1.0.0",
  "description": "Capycolour: single-file ChatGPT-assisted colour-by-number demo with Playwright smoke tests",
  "scripts": {
    "start": "http-server . -p 8000 -c-1",
    "dev": "http-server . -p 8000 -c-1",
    "test": "playwright test",
    "build:fallbacks": "node tools/build-starter-fallbacks.js",
    "test:smoke": "playwright test tests/ui-review.spec.js",
    "test:ci": "playwright test --reporter=github --workers=2",
    "show-report": "playwright show-report",
    "postinstall": "playwright install --with-deps",
    "test:loop": "playwright test --ui --project=chromium",
    "test:prompt": "playwright test tests/prompt-flow.spec.js",
    "git:update": "node tools/git-update.js",
    "lint:conflicts": "rg --files-with-matches '<<<<<<<[[:space:]]' --glob '!node_modules' --glob '!.git' || true"
  },
  "devDependencies": {
    "@babel/standalone": "^7.24.8",
    "@playwright/test": "^1.55.1",
    "http-server": "^14.1.1",
    "playwright": "^1.55.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
